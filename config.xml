<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id			= "com.techloy.com"
	version		= "1.0.0">

	<name>Techloy Reader</name>

	<description>
	The Techloy Reader is a simple app that pulls the latest news from Nigeria's top technology and social media site (www.techloy.com)
	</description>

	<author href="http://facebook.com/weatherafrica">
		Donnie Ibiyemi
	</author>
           
        <feature name="http://api.phonegap.com/1.0/geolocation"/>
        <gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
	</gap:platforms>

<icon src="icon.png" />

 <gap:splash src="splash.png" />

<preference name="load-url-timeout" value="85000" />
<preference name="fullscreen" value="true" />

<access origin="*" subdomains="true" />

<gap:plugin name="ChildBrowser" />

</widget>